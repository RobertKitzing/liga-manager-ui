{
  "name": "liga-manager-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host '0.0.0.0' --proxy-config proxy.conf.json",
    "build": "ng build",
    "build:web": "npm run build && copy-files-from-to --mode web",
    "build:app:local": "npm run clean:dist && npm run build && copy-files-from-to --mode app-local --silent",
    "build:app:prod": "npm run clean:dist && npm run build && copy-files-from-to --mode app-prod --silent",
    "build:web:stats": "ng build -c web --stats-json",
    "watch": "ng build --watch --configuration development",
    "test": "jest --coverage",
    "graphql-gen:api": "graphql-codegen --config codegenAPI.yml",
    "i18n:extract": "ngx-translate-extract --input ./src --output src/i18n/en-GB.json --clean --sort --format json",
    "i18n:languages": "node get-languages.mjs",
    "analyze": "npx webpack-bundle-analyzer dist/liga-manager-ui/stats.json",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "clean:dist": "rimraf ../capacitor/dist"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ]
  },
  "copyFiles": [
    {
      "from": {
        "web": "appsettings/appsettings.web.json",
        "app-local": "appsettings/appsettings.app-local.json",
        "app-prod": "appsettings/appsettings.app-prod.json"
      },
      "to": {
        "web": "dist/liga-manager-ui/browser/appsettings.json",
        "app-local": "../capacitor/dist/liga-manager-ui/appsettings.json",
        "app-prod": "../capacitor/dist/liga-manager-ui/appsettings.json"
      }
    },
    {
      "from": "dist/liga-manager-ui/browser/**/*",
      "to": {
        "default": "../capacitor/dist/liga-manager-ui",
        "web": {
          "skip": true
        }
      }
    }
  ],
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/cdk": "^19.2.18",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/material": "^19.2.18",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@aparajita/capacitor-dark-mode": "^4.0.1",
    "@apollo/client": "^3.13.8",
    "@colsen1991/ngx-translate-extract-marker": "^2.0.8",
    "@fullcalendar/angular": "^6.1.17",
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.10",
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/typescript-apollo-angular": "^3.5.6",
    "@graphql-codegen/typescript-operations": "^2.5.10",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "apollo-angular": "^11.0.0",
    "copy-files-from-to": "^3.9.1",
    "dayjs": "^1.11.10",
    "graphql": "^16.7.1",
    "hammerjs": "^2.0.8",
    "js-base64": "^3.7.3",
    "languages": "^0.1.3",
    "ngx-webstorage": "^19.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "rxjs": "~7.5.0",
    "tiny-json-http": "^7.4.2",
    "ts-cacheable": "^1.0.10",
    "ts-password-generator": "^1.0.6",
    "tslib": "^2.3.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "18.4.3",
    "@angular-eslint/eslint-plugin": "18.4.3",
    "@angular-eslint/eslint-plugin-template": "18.4.3",
    "@angular-eslint/schematics": "18.4.3",
    "@angular-eslint/template-parser": "18.4.3",
    "@angular/build": "^19.2.15",
    "@angular/cli": "~19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@softarc/eslint-plugin-sheriff": "^0.11.0",
    "@softarc/sheriff-core": "^0.11.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vendure/ngx-translate-extract": "^9.0.3",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.57.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.5.0",
    "jest-preset-angular": "^14.6.0",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.5.4"
  }
}
