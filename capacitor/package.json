{
    "name": "liga-manager-app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "gen:assets": "npx capacitor-assets generate --android",
        "sync:local": "copy-files-from-to --mode local && npx cap sync",
        "sync:prod": "copy-files-from-to --mode prod && npx cap sync",
        "build": "npx cap build android",
        "update": "npx cap update android",
        "set:version:android": "capacitor-set-version set:android"

    },
    "copyFiles": [
        {
            "from": {
                "local": "../frontend/appsettings/appsettings.app-local.json",
                "prod": "../frontend/appsettings/appsettings.app-prod.json"
            },
            "to": "dist/liga-manager-ui/appsettings.json"
        }
    ],
    "copyFilesSettings": {
        "whenFileExists": "overwrite"
    },
    "dependencies": {
        "@capacitor/android": "^5.0.0",
        "@capacitor/assets": "^3.0.4",
        "@capacitor/core": "^5.0.0",
        "capacitor-set-version": "^2.2.0",
        "copy-files-from-to": "^3.9.1"
    },
    "devDependencies": {
        "@capacitor/cli": "^5.0.0",
        "typescript": "^5.3.3"
    }
}
