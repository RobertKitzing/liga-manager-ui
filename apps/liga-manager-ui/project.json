{
    "name": "liga-manager-ui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "generators": {
        "@schematics/angular:component": {
            "style": "none",
            "skipTests": true
        },
        "@schematics/angular:class": {
            "skipTests": true
        },
        "@schematics/angular:directive": {
            "skipTests": true
        },
        "@schematics/angular:guard": {
            "skipTests": true
        },
        "@schematics/angular:interceptor": {
            "skipTests": true
        },
        "@schematics/angular:pipe": {
            "skipTests": true
        },
        "@schematics/angular:resolver": {
            "skipTests": true
        },
        "@schematics/angular:service": {
            "skipTests": true
        }
    },
    "sourceRoot": "apps/liga-manager-ui/src",
    "prefix": "lima",
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "options": {
                "outputPath": "dist/apps/liga-manager-ui",
                "index": "apps/liga-manager-ui/src/index.html",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/liga-manager-ui/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    "apps/liga-manager-ui/src/favicon.ico",
                    "apps/liga-manager-ui/src/assets",
                    "apps/liga-manager-ui/src/i18n",
                    {
                        "glob": "**/*.js",
                        "input": "apps/liga-manager-ui/node_modules/@angular/common/locales",
                        "output": "/assets/locales"
                    }
                ],
                "styles": [
                    "apps/liga-manager-ui/src/styles.scss",
                    {
                        "input": "apps/liga-manager-ui/src/themes/default.scss",
                        "inject": false
                    },
                    {
                        "input": "apps/liga-manager-ui/src/themes/gondi.scss",
                        "inject": false
                    },
                    {
                        "input": "apps/liga-manager-ui/src/themes/werder.scss",
                        "inject": false
                    }
                ],
                "scripts": [],
                "browser": "apps/liga-manager-ui/src/main.ts"
            },
            "configurations": {
                "web": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "2mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "2kb",
                            "maximumError": "4kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                }
            },
            "defaultConfiguration": "web",
            "outputs": ["{options.outputPath}"]
        },
        "serve": {
            "executor": "@angular/build:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "liga-manager-ui:build:production"
                },
                "development": {
                    "buildTarget": "liga-manager-ui:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": [
                    "apps/liga-manager-ui/**/*.ts",
                    "apps/liga-manager-ui/**/*.html"
                ]
            }
        }
    }
}
