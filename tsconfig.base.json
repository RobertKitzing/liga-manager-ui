{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/out-tsc",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "module": "ES2022",
        "useDefineForClassFields": false,
        "esModuleInterop": true,
        "lib": ["ES2022", "dom"],
        "paths": {
            "@cypress/*": ["apps/liga-manager-ui-web/cypress/*"],
            "@liga-manager-api/graphql": ["libs/api-graphql/src/index.ts"],
            "@liga-manager-ui": ["apps/liga-manager-ui-web/src/app/index.ts"],
            "@liga-manager-ui/common": ["libs/common/src/index.ts"],
            "@liga-manager-ui/components": ["libs/components/src/index.ts"],
            "@liga-manager-ui/directives": ["libs/directives/src/index.ts"],
            "@liga-manager-ui/pipes": ["libs/pipes/src/index.ts"],
            "@liga-manager-ui/services": ["libs/services/src/index.ts"],
            "@liga-manager-ui/utils": ["libs/utils/src/index.ts"]
        },
        "rootDir": "."
    },
    "exclude": ["node_modules", "tmp"]
}
