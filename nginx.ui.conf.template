include mime.types;
types {
  application/javascript mjs;
}

location / {
  root /ui/browser;
  index index.html;
  try_files $uri /index.html =404;
}

location /appsettings.json {
    default_type application/json;
    return 200 '{ "googleMapsApiKey": "${GOOGLE_MAPS_API_KEY}", "use_imgproxy": "${USE_IMGPROXY}", "use_local_assets": "${USE_LOCAL_ASSETS}", "local_time_zone": "${TZ}" }';
}

location /imgproxy {
  rewrite /imgproxy/(.*) /$1  break;
  proxy_pass http://imgproxy;
}
